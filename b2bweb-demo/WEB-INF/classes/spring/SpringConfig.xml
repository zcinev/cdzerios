<!--  	</bean>  -->
 	
  	<bean id="remoteServerUrl1" class="java.lang.String">  
  		<constructor-arg value="http://192.168.2.243:8090/customer.hs"/>   
  	</bean>  
 	
<!--  	 <bean id="remoteServerUrl1" class="java.lang.String">  -->
<!--  		<constructor-arg value="http://192.168.1.46:8080/server-demo/customer.hs"/>   -->
<!--  	</bean>  -->
 	
  	<bean id="remoteServerUrl2" class="java.lang.String">  
