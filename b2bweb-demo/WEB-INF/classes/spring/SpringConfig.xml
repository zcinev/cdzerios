	<!--  	实例化持久层服务类，供controller注入使用       -->
 	<bean id="customerService" class="com.bc.serviceImpl.CustomerServiceImpl"> 
 		<property name="url"  ref="remoteServerUrl1" />
 	</bean> 
 	
 	<!--  	实例化持久层服务类，供controller注入使用       -->
 	<bean id="peiService" class="com.bc.serviceImpl.PeiServiceImpl"> 
 		<property name="url"  ref="remoteServerUrl2" />
 	</bean> 
 	<!--  	实例化维修库持久层服务类，供controller注入使用       -->
